[user]
	name = <NAME>
	email = <EMAIL>
[core]
	editor = nvim
	pager = less -R
	whitespace = -trailing-space,-space-before-tab,-indent-with-non-tab
	autocrlf = input
[alias]
	# shortcuts
	st = status -sb
	aa = add .
	ap = add --patch
	ci = commit
	cim = commit -m
	ca = commit --amend
	co = checkout
	rb = rebase
	rh = reset --hard HEAD
	ds = diff --staged
	sm = submodule
	ch = rebase -i # change history
	# shortcuts for stash
	sl = stash list
	sp = stash pop
	ss = stash save
	sc = stash clear
	# use patient diff
	diff = diff --patience
	# to undo add
	unstage = reset HEAD --
	# nice log
	l = log --graph --pretty=format:'%C(bold)%h%Creset%C(yellow)%d%Creset %C(red)%s%Creset%n        %ar (%ai)%n        %an <%ae>' --abbrev-commit --date=relative --all
	# define files as unchanged
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
[color]
	ui = auto
[push]
	default = upstream
[branch]
	autosetuprebase = always
[diff]
	tool = meld
[rerere]
	enabled = true
[pull]
	rebase = true
[help]
	autocorrect = 1
