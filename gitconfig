[user]
	name = <NAME>
	email = <EMAIL>

[core]
	editor = nvim
	pager = less -R
	whitespace = -trailing-space,-space-before-tab,-indent-with-non-tab
	autocrlf = input

[alias]
	# shortcuts
	st = status -sb
	aa = add .
	ap = add --patch
	ci = commit
	cim = commit -m
	co = checkout
	rb = rebase
	rh = reset --hard HEAD
	diff = diff --patience
	ds = diff --staged
	amend = commit --amend
	unstage = reset HEAD --
	sm = submodule
	# nice log
	ls = log --pretty=format:"%ad\\ %C(yellow)%h%C(red)%d\\ %C(reset)%s%C(blue)\\ [%cn]" --decorate --date=short --graph --numstat
	# define files as unchanged
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	# shortcuts for stash
	sl = stash list
	sp = stash pop
	ss = stash save
	sc = stash clear

[push]
	default = upstream

[branch]
	autosetuprebase = always

[diff]
	tool = meld

[help]
	autocorrect = 1

[color]
	ui = auto
