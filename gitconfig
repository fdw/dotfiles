[user]
	name = <NAME>
	email = <EMAIL>
[core]
	editor = nvim
	pager = less -R
	whitespace = -trailing-space,-space-before-tab,-indent-with-non-tab
	autocrlf = input
[fetch]
	prune = true
[pull]
	rebase = true
[push]
	default = upstream
[rebase]
	autostash = true
	autosquash = true
[rerere]
	enabled = true
[color]
	ui = auto
[help]
	autocorrect = 1
[diff]
	tool = meld
[alias]
	# shortcuts
	st = status -sb
	aa = add -A
	ap = add --patch
	ci = commit
	cim = commit --message
	ca = commit --amend
	co = checkout
	rb = rebase
	rbi = rebase --interactive
	rh = reset --hard HEAD
	ds = diff --staged
	sm = submodule
	# shortcuts for stash
	sl = stash list
	sp = stash pop
	ss = stash save
	sc = stash clear
	# use patient diff
	diff = diff --patience
	# to undo add
	unstage = reset HEAD --
	# nice log
	l = log --graph --pretty=format:'%C(bold)%h%Creset%C(yellow)%d%Creset %C(red)%s%Creset%n        %ar (%ai)%n        %an <%ae>' --abbrev-commit --date=relative --all
	# define files as unchanged
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	# set upstream branch
	pu = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
	# Remove old (merged) branches
	cb = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -r -n 1 git branch -d"
