[user]
	name=Fabian Winter
	useConfigOnly=true
[core]
	editor = nvim
	pager = delta
	whitespace = -trailing-space,-space-before-tab,-indent-with-non-tab
	autocrlf = input
	excludesfile = ~/.config/git/ignore
	ignorecase = true
[protocol]
	version = 2
[fetch]
	prune = true
[pull]
	rebase = true
[push]
	default = upstream
[rebase]
	stat = true
	autostash = true
	autosquash = true
[rerere]
	enabled = true
[interactive]
	diffFilter = delta --color-only --features=interactive
[diff]
	tool = difftastic
	colorMoved = default
[merge]
	conflictstyle = diff3
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[pager]
	difftool = true
[color]
	ui = auto
[help]
	autocorrect = 1
[init]
	defaultBranch = main
[alias]
	# shortcuts
	a = add
	c = commit
	d = diff
	f = commit --fixup
	g = pull # get
	p = push
	s = switch
	r = restore
	u = fetch # update
	# helper functions
	st = status -sb
	aa = add -A
	ai = add --interactive
	ap = add --patch
	cim = commit --message
	ca = commit --amend
	ds = diff --staged
	nb = switch -c
	pf = push --force
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	rbi = rebase --interactive
	rh = reset --hard HEAD
	sm = submodule
	# shortcuts for stash
	sl = stash list
	sp = stash pop
	ss = stash push
	sss = stash push --staged
	sc = stash clear
	fixup = commit --fixup
	# use patient diff
	diff = diff --patience
	# to undo add
	unstage = reset HEAD --
	# nice log
	l = log --graph --pretty=format:'%C(bold)%h%Creset%C(yellow)%d%Creset %C(red)%s%Creset%n        %ar (%ai)%n        %an <%ae>' --abbrev-commit --date=relative --all
	# define files as unchanged
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	# create upstream branch and push
	pu = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
	# Remove old (merged) branches
	cb = "!git branch --merged | egrep -v '(^\\*|main|master|develop)' | xargs -r -n 1 git branch -d"
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true
