[user]
	name=Fabian Winter
	useConfigOnly=true
[core]
	editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RFX
	whitespace = -trailing-space,-space-before-tab,-indent-with-non-tab
	autocrlf = input
	excludesfile = /home/fdw/.gitignore
[protocol]
	version = 2
[fetch]
	prune = true
[pull]
	rebase = true
[push]
	default = upstream
[rebase]
	stat = true
	autostash = true
	autosquash = true
[rerere]
	enabled = true
[color]
	ui = auto
[help]
	autocorrect = 1
[alias]
	# shortcuts
	a = add
	c = commit
	d = diff
	f = commit --fixup
	g = pull # get
	p = push
	s = checkout # switch
	u = fetch # update
	# helper functions
	st = status -sb
	aa = add -A
	ai = add --interactive
	ap = add --patch
	cim = commit --message
	ca = commit --amend
	ds = diff --staged
	nb = checkout -b
	pf = push --force
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	rbi = rebase --interactive
	rh = reset --hard HEAD
	sm = submodule
	# shortcuts for stash
	sl = stash list
	sp = stash pop
	ss = stash push
	ssu = stash push -k
	sc = stash clear
	fixup = commit --fixup
	# use patient diff
	diff = diff --patience
	# to undo add
	unstage = reset HEAD --
	# nice log
	l = log --graph --pretty=format:'%C(bold)%h%Creset%C(yellow)%d%Creset %C(red)%s%Creset%n        %ar (%ai)%n        %an <%ae>' --abbrev-commit --date=relative --all
	# define files as unchanged
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	# create upstream branch and push
	pu = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
	# Remove old (merged) branches
	cb = "!git branch --merged | grep  -v '\\*\\|master\\|develop|main' | xargs -r -n 1 git branch -d"
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
