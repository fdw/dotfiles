if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# Storage
## Cache dir
ZSH_CACHE_DIR="${XDG_CACHE_HOME:-$HOME/.cache}/zsh"
mkdir -p ${ZSH_CACHE_DIR}
## Data dir
ZSH_DATA_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/zsh"
mkdir -p ${ZSH_DATA_DIR}

# History
command_oriented_history=1
HISTCONTROL=ignoreboth
ulimit -c unlimited
umask 022
mesg y
export HISTFILE="${ZSH_DATA_DIR}/history"
export HISTSIZE=5000
export SAVEHIST=5000
fc -R ${HISTFILE}

# Completion
zstyle ':completion:*' completer _oldlist _expand _force_rehash _complete _match _approximate
zstyle ':completion:*:match:*' original only
zstyle ':completion:*:approximate:*' max-errors 1 numeric
zstyle ':completion:*' verbose yes
zstyle ':completion:*' menu select
## Caching
zstyle ':completion:*' use-cache on
zstyle ':completion:*' cache-path ${ZSH_CACHE_DIR}/autocomplete
## Forcing the rehash
_force_rehash() {
	(( CURRENT == 1 )) && rehash
	return 1
}

# Aliases
alias ls='ls ${=LS_OPTIONS}'
alias ll='ls'
alias la='ls -A'
alias -g mkdir='mkdir -p'
alias -g grep='grep --color'

# zsh options
## changing directories
setopt auto_cd
setopt auto_pushd
setopt pushd_ignore_dups
setopt pushd_silent
setopt pushd_to_home
## completion
setopt auto_list
setopt auto_menu
setopt auto_remove_slash
setopt complete_in_word
setopt list_rows_first
setopt list_types
## Globbing
setopt extended_glob
setopt no_case_glob
setopt numeric_glob_sort
setopt glob
## History
setopt append_history
setopt hist_ignore_all_dups
setopt hist_reduce_blanks
setopt hist_verify
setopt share_history
## I/O
setopt correct
setopt print_exit_value
## Job Control
setopt autoresume
## Scripts
setopt multios

# Plugins
## Colorful ls
if [[ -f "${HOME}/.dir_colors" ]]
then
	eval `dircolors ${HOME}/.dir_colors`
	zstyle ':completion:*:default' list-colors ${(s.:.)LS_COLORS}
fi

## Direnv
eval "$(direnv hook zsh)"

## Zgen
### Config (pre)
#### Prompt
DEFAULT_USER=fdw
#### oh-my-zsh
DISABLE_AUTO_UPDATE="true"
#### per-directory-history
HISTORY_BASE=${ZSH_DATA_DIR}/histories

### Loading
ZGEN_DIR=${ZSH_DATA_DIR}/plugins
source ${ZSH_DATA_DIR}/zgen/zgen.zsh

if ! zgen saved; then
	# UI
	zgen load romkatv/powerlevel10k powerlevel10k
	zgen load zdharma/fast-syntax-highlighting
	# autosuggestions
	zgen load zsh-users/zsh-autosuggestions
	# autojump
	zgen load /usr/share/autojump/autojump.zsh 
	zgen load fdw/ranger_autojump
	# oh-my-zsh
	zgen oh-my-zsh
	zgen oh-my-zsh plugins/history-substring-search
	zgen oh-my-zsh plugins/pass
	zgen oh-my-zsh plugins/per-directory-history
	# fzf
	zgen load junegunn/fzf shell/completion.zsh
	zgen load junegunn/fzf shell/key-bindings.zsh
	# completion
	zgen load zsh-users/zsh-completions
	# local
	zgen load ${ZSH_DATA_DIR}/aliases.zsh
	zgen load ${ZSH_DATA_DIR}/completions
	zgen save
fi

### Config (post)
#### P10K
source ${ZSH_DATA_DIR}/p10k.zsh
#### History substring search
zmodload zsh/terminfo
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down
#### fzf
export FZF_DEFAULT_COMMAND="fd --type file --no-ignore"
export FZF_CTRL_T_COMMAND="${FZF_DEFAULT_COMMAND} --hidden"
export FZF_CTRL_T_OPTS="--preview '(highlight -O ansi -l {} 2> /dev/null || cat {} || tree -C {}) 2> /dev/null | head -200'"
#### autosuggestions
export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=cyan"
bindkey '^[<CR>' autosuggest-execute
bindkey '^[_KreX^[\' autosuggest-execute

(( ! ${+functions[p10k-instant-prompt-finalize]} )) || p10k-instant-prompt-finalize
