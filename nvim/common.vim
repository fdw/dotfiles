" Behavior
set hidden
set viewoptions=cursor,folds,slash,unix
set nrformats=hex
syntax enable
set lazyredraw

" Search
set ignorecase
set smartcase
set infercase
set scrolloff=5
set gdefault

" Autocomplete
set wildmode=longest:full,full

" Set tabs
set shiftwidth=2
set tabstop=2

" Folding
set foldenable
set foldmethod=syntax
set foldnestmax=20
set foldlevelstart=20

